Include /Users/rohin/.colima/ssh_config

# LOCAL HOSTS
Host localhost
  UserKnownHostsFile /dev/null

Host ubuntu-local
  HostName 192.168.64.50
  IdentityAgent ~/.gnupg/S.gpg-agent.ssh
  PasswordAuthentication no
  PubkeyAuthentication yes
  User rohin

# EXTERNAL HOSTS

Host uwo
  HostName compute.gaul.csd.uwo.ca
  IdentityAgent ~/.gnupg/S.gpg-agent.ssh
  PasswordAuthentication no
  PubkeyAuthentication yes
  User RARYA4

Host mc
  HostName mc.r0h.in
  IdentityAgent ~/.gnupg/S.gpg-agent.ssh
  User ubuntu

Host compute
  HostName compute.r0h.in
  IdentityAgent ~/.gnupg/S.gpg-agent.ssh
  Port 2222
  User rohin

Host compute-alt
  HostName compute-alt.r0h.in
  IdentityAgent ~/.gnupg/S.gpg-agent.ssh
  User ubuntu

Host vpn
  HostName vpn.r0h.in
  IdentityAgent ~/.gnupg/S.gpg-agent.ssh
  User rohin

Host github
  HostName github.com
  IdentityAgent ~/.gnupg/S.gpg-agent.ssh
  User git

Host gitlab
